  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>MadLibLibrary</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.1/css/bulma.min.css" />
    <script defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
  </head>
  <body>

    <!-- Navigation Bar -->
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-menu">
        <div class="navbar-start">
          <a class="navbar-item" href="/">
            Home
          </a>

          <a class="navbar-item" href="/madlibs">
            Mad Libs
          </a>

          <a class="navbar-item" href="/users/browse">
              Browse
          </a>

          <% if logged_in? %>
          <a class="navbar-item" href="/users/<%= current_user.slug %>">
            Profile
          </a>
          <% end %>
        </div>

        <% if logged_in? %>
          <div class="navbar-end">
            <div class="navbar-item">
              <div class="buttons">
                <a class="button is-light" href="/logout">
                  Log out
                </a>
              </div>
            </div>
          </div>
        <% else %>
          <div class="navbar-end">
            <div class="navbar-item">
              <div class="buttons">
                <a class="button" id="sign-up-button" href="/signup">
                  <strong>Sign up</strong>
                </a>
                <a class="button is-light" href="/login">
                  Log in
                </a>
              </div>
            </div>
          </div>
        <% end %>

      </div>
    </nav>

    <div class="wrapper">

      <center><%= styled_flash %></center>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2020 <strong>MadLibLibrary</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
