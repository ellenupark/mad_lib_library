<div class="flex-container">
    <div class="header">
        <h1 class="title is-1">Edit your Story!</h1>
    </div>

    <section class="content">
        <form method="POST" action="/stories/<%=@story.id%>" >
            <input id="hidden" type="hidden" name="_method" value="PATCH">

            <% @story.madlib.blanks.each_with_index do | word, i | %>
                <div class="field">
                    <label class="label" for="<%= word %>"><%= word.capitalize %>: </label>
                    <div class="control">
                        <input class="input" type="text" name="blanks[<%= i %>]" placeholder="<%= @story.convert_input_string_into_array[i] %>"><br>
                    </div>
                </div>
            <% end %>

            <input class="button is-light"type="submit" name="submit" value="Confirm Changes">
            <input class="button is-link is-light" type="submit" name="cancel" value="Cancel">
        </form>
    </div>
</div>