<h1 class="title is-1"><%= @madlib.title %></h1>

<form method="POST" action="/stories" >

    <% @madlib.blanks.each_with_index do | word, i | %>
        <div class="field">
            <label for="<%= word %>" class="label"><%= word.capitalize %></label>
            <div class="control">
                <input style="width: 50%;" class="input" name="blanks[<%= i %>]" type="text">
            </div>
        </div>
    <% end %>
 
    <input class="button is-light" type="submit" name="submit" value="Submit">
</form>